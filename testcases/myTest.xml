<SteerBenchTestCase>

  <header>
    <version>1.0</version>
    <name>myCurve</name>
    <worldBounds>
      <xmin>-100</xmin>
      <xmax>100</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-100</zmin>
      <zmax>100</zmax>
    </worldBounds>
  </header>
  
  <suggestedCameraView>
    <position> <x>-10</x> <y>35</y> <z>-5</z> </position>
    <lookat> <x>0</x> <y>0</y> <z>0</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <targetTangent> <x>0</x> <y>0</y> <z>0</z> </targetTangent>
    <targetTime>15</targetTime>
    <fovy>45</fovy>
  </suggestedCameraView>

  <suggestedCameraView>
    <position> <x>25</x> <y>35</y> <z>-2</z> </position>
    <lookat> <x>0</x> <y>0</y> <z>0</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <fovy>45</fovy>
    <targetTangent> <x>-2</x> <y>0</y> <z>0</z> </targetTangent>
    <targetTime>20</targetTime>
  </suggestedCameraView>

  <suggestedCameraView>
    <position> <x>5</x> <y>35</y> <z>6</z> </position>
    <lookat> <x>0</x> <y>0</y> <z>0</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <fovy>45</fovy>
    <targetTangent> <x>20</x> <y>0</y> <z>6</z> </targetTangent>
    <targetTime>15</targetTime>
  </suggestedCameraView>

  <agent>
    <name>A</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>0</x> <y>0</y> <z>0</z> </position>
      <direction> <x>6</x> <y>0</y> <z>0</z> </direction>
      <color> <r>0.9</r> <g>0.9</g> <b>0</b> </color>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>10</x> <y>0</y> <z>-10</z> </targetLocation>
        <targetTangent> <x>-6</x> <y>0</y> <z>0</z> </targetTangent>
        <targetTime>5</targetTime>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>10000</timeDuration>
      </seekStaticTarget>
      <seekStaticTarget>
        <targetLocation> <x>20</x> <y>0</y> <z>0</z> </targetLocation>
        <targetTangent> <x>6</x> <y>0</y> <z>-10</z> </targetTangent>
        <targetTime>10</targetTime>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>10000</timeDuration>
      </seekStaticTarget>
      <seekStaticTarget>
        <targetLocation> <x>-10</x> <y>0</y> <z>-2</z> </targetLocation>
        <targetTangent> <x>-10</x> <y>0</y> <z>1</z> </targetTangent>
        <targetTime>20</targetTime>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>10000</timeDuration>
      </seekStaticTarget>
      <seekStaticTarget>
        <targetLocation> <x>0</x> <y>0</y> <z>6</z> </targetLocation>
        <targetTangent> <x>3</x> <y>0</y> <z>12</z> </targetTangent>
        <targetTime>15</targetTime>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>10000</timeDuration>
      </seekStaticTarget>
    </goalSequence>
  </agent>

</SteerBenchTestCase>
